{
	"name": "Cookies Interceptor",
	"version": "1.0",
	"description": "Remove Cookies In Transmission",
	"permissions": ["webRequest", "webRequestBlocking", "cookies", "*://*/*"],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "cookie.png",
		"default_title" : "Cookies Interceptor"
	},
	"manifest_version": 2
}